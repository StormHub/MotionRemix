<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <!-- Font resources -->
    <FontFamily x:Key="MainFontFamily">
        Segoe UI Light
    </FontFamily>

    <!-- Font Size scale based on px calculated from golden ratio -->
    <system:Double x:Key="FooterFontSize">
        12.8
    </system:Double>
    <system:Double x:Key="SmallFontSize">
        15
    </system:Double>
    <system:Double x:Key="NormalFontSize">
        20
    </system:Double>
    <system:Double x:Key="LargeFontSize">
        24
    </system:Double>
    <system:Double x:Key="TitleFontSize">
        38.4
    </system:Double>
    <system:Double x:Key="SectionTitleFontSize">
        48
    </system:Double>
    <system:Double x:Key="FrontCoverFontSize">
        84
    </system:Double>

</ResourceDictionary>